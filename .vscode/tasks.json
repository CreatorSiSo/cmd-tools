{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C++: g++.exe Build all .cpp files",
			"command": "g++.exe",
			"args": [
				"-g",
				"${workspaceFolder}\\source\\*.cpp",
				"${workspaceFolder}\\libraries\\internal\\*.cpp",
				"-o",
				"${workspaceFolder}\\cmdt.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Compiler: \"g++.exe\""
		}
	]
}